<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>
      <%= type.charAt(0).toUpperCase() + type.slice(1) %> Assessments
    </title>
    <link rel="stylesheet" href="/css/style.css" />
  </head>
  <body>
    <div class="dashboard-container">
      <nav class="sidebar">
        <div class="logo">Student Portal</div>
        <ul>
          <li><a href="/student/assessments/weekly">Weekly Assessments</a></li>
          <li>
            <a href="/student/assessments/monthly">Monthly Assessments</a>
          </li>
          <li>
            <a href="/student/assessments/quarterly">Quarterly Assessments</a>
          </li>
          <li><a href="/logout">Logout</a></li>
        </ul>
      </nav>

      <main class="main-content">
        <h1><%= type.charAt(0).toUpperCase() + type.slice(1) %> Assessments</h1>

        <% if (assessments.length === 0) { %>
        <p>No <%= type %> assessments available.</p>
        <% } else { %>
        <div class="assessments-list">
          <% assessments.forEach(assessment => { %>
          <div class="assessment-card">
            <h3><%= assessment.assessmentName %></h3>
            <p>Score: <%= assessment.score %>/5</p>
            <p>Date: <%= new Date(assessment.date).toLocaleDateString() %></p>
            <% if (assessment.comments) { %>
            <p>Comments: <%= assessment.comments %></p>
            <% } %>
          </div>
          <% }) %>
        </div>
        <% } %>
      </main>
    </div>
  </body>
</html>

